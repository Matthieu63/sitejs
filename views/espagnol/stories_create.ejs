                    <div class="mb-3">
                        <label for="title" class="form-label">Titre de l'histoire <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>

                    <div class="mb-3">
                        <label for="tags" class="form-label">S√©lectionner des tags (optionnel)</label>
                        <select class="form-select" id="tags" name="tags" multiple>
                            <% if (available_tags && available_tags.length > 0) { %>
                                <% available_tags.forEach(function(tag) { %>
                                    <option value="<%= tag %>"><%= tag %></option>
                                <% }); %>
                            <% } %>
                        </select>
                        <div class="form-text">S√©lectionnez un ou plusieurs tags pour filtrer les mots √† utiliser</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Niveau de difficult√© (optionnel)</label>
                        <div class="star-rating">
