<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Gestionnaire de Dialogues</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    .file-item {
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container mt-5">
    <h1>Gestionnaire de Dialogues</h1>

    <form action="/espagnol/dialogues" method="POST" enctype="multipart/form-data" class="mb-4">
      <div class="mb-3">
        <label for="pdfFile" class="form-label">Téléverser un fichier PDF :</label>
        <input type="file" name="pdfFile" id="pdfFile" class="form-control" accept="application/pdf" required />
      </div>
      <button type="submit" class="btn btn-primary">Générer les dialogues</button>
    </form>

    <h3>Dialogues générés</h3>
    <% if (dialogues && dialogues.length > 0) { %>
      <ul class="list-group">
        <% dialogues.forEach(function(dialogue) { %>
          <li class="list-group-item">
            <a href="/espagnol/dialogues/view/<%= dialogue.id %>"><%= dialogue.titre %></a>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>Aucun dialogue pour le moment.</p>
    <% } %>
  </div>
</body>
</html>
